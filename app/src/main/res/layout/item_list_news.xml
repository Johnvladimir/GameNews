<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5D1049"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/item_list_news">

    <ImageView
        android:id="@+id/idImage1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/hello_world_doc_version1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#720D5D"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Texto"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Texto"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/idCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/btn_checkbox" />

    </LinearLayout>

</LinearLayout>